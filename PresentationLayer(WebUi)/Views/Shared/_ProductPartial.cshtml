@model IEnumerable<SharedLayer.Domain.ViewModels.ProductVM>

@foreach (var product in Model)
{
    <div class="w-48 lg:w-56 bg-white rounded overflow-hidden drop-shadow-md group">
        <!-- product image -->
        <div class="relative">
            <img src="~/img/@product.imageurl"
                 alt="product_img"
                 class="w-full h-56" />
            <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition">

                <a href="/Product/Details/@product.id"
                   class="text-white text-lg w-9 h-8 rounded-full bg-primary flex items-center justify-center hover:bg-gray-800 transition">
                    <i class="fas fa-search"></i>
                </a>

                <a href="/FavoriteProduct/AddToFavorite/@product.id"
                   class="text-white text-lg w-9 h-8 rounded-full bg-primary flex items-center justify-center hover:bg-gray-800 transition">
                    <i class="far fa-heart"></i>
                </a>
            </div>
        </div>
        <!-- product image-end -->
        <!-- product content -->
        <div class="pt-4 pb-3 px-4">
            <!-- name -->
            <a href="#"
               class="uppercase font-medium text-xl mb-2 text-gray-800 hover:text-primary transition">@product.name</a>
            <!-- price -->
            <div class="flex items-baseline mb-1 space-x-2 font-roboto">
                <p class="text-xl text-primary font-semibold">
                    @product.saleprice
                </p>
                @*<p class="text-sm text-gray-400 line-through">
                        $55.00
                    </p>*@
            </div>
            <!-- price-end -->
            <!-- stars -->
            <div class="flex items-center">
                <div class="flex gap-1 text-sm text-yellow-400">
                    <span>In Stock</span>
                </div>
                <div class="text-xs text-gary-500 ml-3">
                    (@product.quantityavailable)
                </div>
            </div>
        </div>
        <!-- add to cart btn -->
        <a href="/Home/AddToCart/@product.id"
           class="block w-full mt-1 py-2 text-center text-white bg-primary border border-primary rounded-b hover:bg-transparent hover:text-primary transition">Add to cart</a>
        <!-- product content-end -->
    </div>
    <!-- single product-end -->
}
