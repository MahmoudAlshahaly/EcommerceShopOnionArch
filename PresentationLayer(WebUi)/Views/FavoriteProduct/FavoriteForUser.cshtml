@model IEnumerable<SharedLayer.Domain.ViewModels.FavoriteProductVM>

@{
    ViewData["Title"] = "FavoriteForUser";
}
<!-- breadcrums -->
<div class="container py-4 flex items-center gap-3">
    <a href="/Home/Index" class="text-primary text-base">
        <i class="fas fa-home"></i>
    </a>
    <span class="text-sm text-gray-400">
        <i class="fas fa-chevron-right"></i>
    </span>
    <p class="text-gray-600 font-medium">Your WishList Of Product</p>
</div>
<!-- breadcrums-end -->
<div class="container grid grid-cols-12 items-start gap-3 md:gap-5 pt-4 pb-16">

    <div class="col-span-5 lg:col-span-3">
    </div>
    <!-- wish list -->
    <div class="col-span-7 lg:col-span-9">
        <div class="space-y-4">
            @foreach (var item in Model)
            {
                <!-- single wishlist -->
                <div class="w-full flex justify-between items-center gap-2 p-2 md:p-4 border border-gray-200 flex-wrap">
                    <!-- wishlist image -->
                    <div class="hidden md:block w-28">
                        <img src="~/img/@item.Product.imageurl"
                             alt="product image"
                             class="flex-shrink-0 h-28" />
                    </div>
                    <!-- wishlist image-end -->
                    <!-- wishlist content -->
                    <div class="w-1/9 md:w-1/3">
                        <h2 class="text-gray-800 text-sm md:text-xl font-medium uppercase">
                            @item.Product.name
                        </h2>
                        <p class="text-gray-500 text-sm">
                            Availability:
                            <span class="text-green-600">( @item.Product.quantityavailable ) In stock</span>
                        </p>
                    </div>
                    <!-- wishlist content-end -->
                    <div class="text-primary text-sm md:text-lg font-semibold p-2">
                        $ @item.Product.saleprice
                    </div>
                    <a href="/Home/Cart"
                       class="px-2 mx-2 md:px-6 py-2 text-center text-sm text-white bg-primary border border-primary rounded hover:bg-transparent hover:text-primary transition uppercase font-roboto font-medium">add to cart</a>
                    <a href="/FavoriteProduct/Delete/@item.id">
                        <div class="text-gray-600 cursor-pointer hover:text-primary">
                            <i class="fas fa-trash"></i>
                        </div>
                    </a>
                </div>
                <!-- single wishlist-end -->
            }
        </div>
    </div>
    <!-- wish list-end -->


</div>